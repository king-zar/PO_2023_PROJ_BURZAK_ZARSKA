<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="650.0" minWidth="850.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="infoLabel" text="All animals will be living here!" textAlignment="CENTER"/>

            <GridPane fx:id="mapGrid" gridLinesVisible="true" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-border-radius: 5px; -fx-padding: 10px; -fx-max-width: 800px; -fx-max-height: 400px; -fx-alignment: center;"/>
            <!-- narazie nie dziala gridLines i nie wiem co z tym zrobic -->
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Start" onAction="#startSimulation"/>
            <Button text="Pause" onAction="#pauseSimulation"/>
        </HBox>
    </bottom>
</BorderPane>
