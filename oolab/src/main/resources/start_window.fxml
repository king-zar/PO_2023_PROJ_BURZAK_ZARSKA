<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>

<?import javafx.scene.layout.StackPane?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="agh.ics.oop.presenter.StartWindowController"
            minHeight="400.0" minWidth="650.0">

    <top>
        <StackPane alignment="CENTER">
            <Label text="Simulation Setup" style="-fx-font-size: 18px;"/>
        </StackPane>
    </top>

    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="20">
            <Label text="Width:"/>
            <TextField fx:id="widthField" GridPane.columnIndex="1" />

            <Label text="Height:" GridPane.rowIndex="1"/>
            <TextField fx:id="heightField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Steps:" GridPane.rowIndex="2"/>
            <TextField fx:id="stepsField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Animal Count:" GridPane.rowIndex="3"/>
            <TextField fx:id="animalCount" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Initial Plant Count:" GridPane.rowIndex="4"/>
            <TextField fx:id="initialPlantCount" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Plant To Grow Per Step:" GridPane.rowIndex="5"/>
            <TextField fx:id="plantToGrowPerStep" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label text="Mutation Variant:" GridPane.rowIndex="6"/>
            <ChoiceBox fx:id="mutationVariantChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            <!-- trzy kolumny puste, aby zwiekszyc przestrzen miedzy widzianymi kolumnami -->
            <Label text="Min Mutations:" GridPane.columnIndex="5"/>
            <TextField fx:id="minMutations" GridPane.columnIndex="6"/>

            <Label text="Max Mutations:" GridPane.columnIndex="5" GridPane.rowIndex="1"/>
            <TextField fx:id="maxMutations" GridPane.columnIndex="6" GridPane.rowIndex="1" />

            <Label text="Map Variant:" GridPane.columnIndex="5" GridPane.rowIndex="6"/>
            <ChoiceBox fx:id="mapVariantChoiceBox" GridPane.columnIndex="6" GridPane.rowIndex="6"/>

        </GridPane>
    </center>

    <bottom>
        <StackPane>
            <Button text="Start" onAction="#startSimulation"/>
        </StackPane>
    </bottom>
</BorderPane>
